{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "ESNext",
    "lib": ["ESNext"],
    "declaration": true,
    "target": "ES5",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true
  },
  "include": ["src/**/*", "custom.d.ts"],
  "exclude": ["node_modules"]
}
