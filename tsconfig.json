{
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ESNext"],
    "declaration": true,
    "target": "ES5",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src/**/*", "custom.d.ts", "scripts"],
  "exclude": ["node_modules"]
}
